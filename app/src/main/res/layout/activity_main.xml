<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/myPrimaryColor"
	android:padding="20dp"
	android:gravity="center_vertical">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<ImageView
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:id="@+id/imageView"
            android:background="@drawable/logo"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
			android:layout_gravity="center_horizontal"
            android:layout_margin="20dp" />

		<LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@color/myPrimaryDarkColor"
            android:gravity="fill_horizontal">

			<LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal">

            <Spinner
                android:id="@+id/spinner1"
                android:textColor="@color/bright_foreground_material_dark"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:entries="@array/country_arrays"
                android:prompt="@string/country_prompt" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editText"
                android:hint="Keterangan (optional)"
                android:textSize="@dimen/text1"
                android:textColor="#ffffffff"
                android:textColorHighlight="#ffffffff"
                android:textColorHint="@color/dim_foreground_disabled_material_dark"
                android:textColorLink="#ffffffff"
                android:backgroundTint="@color/myAccentColor"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="35dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Update"
                android:textColor="#ffffffff"
                android:background="@color/myAccentColor"
                android:id="@+id/button"
                android:layout_above="@+id/textview1"
                android:layout_centerHorizontal="true" />

            </LinearLayout>
        </LinearLayout>

	</LinearLayout>

</RelativeLayout>
