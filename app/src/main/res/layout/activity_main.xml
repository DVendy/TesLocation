<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/myPrimaryColor"
	android:padding="20dp"
	android:gravity="center_vertical">
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="20dp"
		android:background="@color/myPrimaryDarkColor"
		android:gravity="fill_horizontal">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center_vertical|center_horizontal">

		<EditText
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:inputType="text"
			android:ems="10"
			android:id="@+id/editText2"
			android:hint="id" />

		<Spinner
			android:id="@+id/spinner1"
			android:textColor="#ffffffff"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:entries="@array/country_arrays"
			android:prompt="@string/country_prompt" />

		<EditText
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:inputType="textMultiLine"
			android:ems="10"
			android:id="@+id/editText"
			android:hint="Keterangan (optional)"
			android:textSize="@dimen/text1"
			android:textColor="#ffffffff"
			android:textColorHighlight="#ffffffff"
			android:textColorHint="#ffffffff"
			android:textColorLink="#ffffffff"
			android:backgroundTint="@color/myAccentColor"
			android:layout_marginTop="35dp"
			android:layout_marginBottom="35dp" />

		<Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
			android:text="Update"
			android:textColor="#ffffffff"
			android:background="@color/myAccentColor"
			android:id="@+id/button"
			android:layout_above="@+id/textview1"
			android:layout_centerHorizontal="true" />

		<TextView android:text="@string/hello_world" android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/textview1"
			android:layout_centerVertical="true"
			android:layout_centerHorizontal="true"
			android:textAlignment="center" />

	</LinearLayout>
	</LinearLayout>
</RelativeLayout>
